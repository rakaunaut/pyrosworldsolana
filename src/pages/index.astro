---
import Layout from "../layouts/Layout.astro";

/* import React Components */
import { ScrollUpButton } from "../components/ScrollUpButton";

/* Import Images */

import pyroLogo from "../assets/images/pyro-logo.png";
import pyro1 from "../assets/images/pyro-01.png";
import Img1 from "../assets/images/game-1.jpg";
import Img2 from "../assets/images/game-2.jpg";
import Img3 from "../assets/images/game-3.jpg";
import Img4 from "../assets/images/game-4.jpg";

/* Import Videos */

import PyroVideoMP4 from "../assets/videos/PyroTrailer.mp4";
import PyroVideoWEBM from "../assets/videos/PyroTrailer.webm";

/* Import Svelte Components */
import Navbar from "../components/Navbar.svelte";
import Hero from "../components/Hero.svelte";
import Footer from "../components/Footer.svelte";
import Tokenomics from "../components/Tokenomics.svelte";
import Roadmap from "../components/Roadmap.svelte";
import PreSale1 from "../components/PreSale1.svelte";
import GameInsights from "../components/GameInsights.svelte";
import FAQ from "../components/FAQ.svelte";

import "../styles/Theme.css";
import "../styles/Diagonals.css";
import { object } from "astro:schema";
---

<Layout title="Pyros World">
  <Navbar logo={pyroLogo.src} client:load />

  <Hero webm={PyroVideoWEBM} mp4={PyroVideoMP4} client:load />
  <PreSale1 img={pyro1.src} client:load />
  <GameInsights
    img1={Img1.src}
    img2={Img2.src}
    img3={Img3.src}
    img4={Img4.src}
    client:load
  />
  <Roadmap client:load />
  <Tokenomics client:load />
  <FAQ client:load />

  <Footer logo={pyroLogo.src} />

  <ScrollUpButton client:load />
</Layout>
